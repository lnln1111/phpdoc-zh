 </refnamediv>

  <refsect1 role="description">
  &reftitle.description;
  <simpara>
   &info.function.alias;
   <function>rtrim</function>.
  </simpara>
 </refsect1>

  <refsect1 role="notes">
  &reftitle.notes;
